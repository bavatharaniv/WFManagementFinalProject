@model WFManagementFinalProject.Models.WFMember
@{
    Layout = null;
}
@{
    ViewData["Title"] = "Soft Lock Request Confirmation";
}
<head>
    <title>Bootstrap Login Form | Web Dev Trick</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="http://code.jquery.com/jquery-1.9.1.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" integrity="sha384-gfdkjb5BdAXd+lj+gudLWI+BXq4IuLW5IT+brZEZsLFm++aCMlF1V92rMkPaX4PP" crossorigin="anonymous">
</head>

<style>
    html,
    body {
        height: 100%;
    }

    body {
        margin: 0;
        background: linear-gradient(45deg, #49a09d, #5f2c82);
        font-family: sans-serif;
        font-weight: 100;
    }

    .heading {
        text-align: center;
        font-size: 25px;
        margin-top: 30px;
        font-family: Arial, Helvetica, sans-serif;
    }

    .table {
        font-family: Arial, Helvetica, sans-serif;
        border-collapse: collapse;
        width: 60%;
        margin-top: 35px;
    }

    .input {
        block-size: 40px;
    }

    .button {
        display: flex;
        justify-content: center;
    }
    /*#490762cf*/
</style>


<h3 class="heading" style="color: white;margin-top:100px;"><b>SOFT LOCK REQUEST CONFIRMATION</b></h3>

<h2 class="heading" style="color: white;margin-top:35px;font-size:15px;"><b>Status Update For Request Lock</b></h2>

<div class="row button" style="margin-top:50px;margin-left:8px;">
    <div class="col-md-4 button">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-lg-4 col-md-5 col-sm-5">
                    <div class="form-group">
                        <b><label asp-for="EmpId" class="control-label" style="color: white;"></label></b>
                        <input asp-for="EmpId" class="form-control" />
                        <span asp-validation-for="EmpId" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-5 col-sm-5">
                    <div class="form-group">
                        <b><label asp-for="Requestee" class="control-label" style="color: white;"></label></b>
                        <input asp-for="Requestee" class="form-control" />
                        <span asp-validation-for="Requestee" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4 col-md-5 col-sm-5">
                    <div class="form-group">
                        <b><label asp-for="EmployeeManager" class="control-label" style="color: white;"></label></b>
                        <input asp-for="EmployeeManager" class="form-control" />
                        <span asp-validation-for="EmployeeManager" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-left:-14px;margin-top: 15px;">
                <div class="col-lg-4 col-md-5 col-sm-5">
                    <div class="form-group">
                        <b><label asp-for="RequestMessage" class="control-label" style="color: white;"></label></b>
                        <input asp-for="RequestMessage" class="form-control" />
                        <span asp-validation-for="RequestMessage" class="text-danger"></span>
                    </div>
                </div>
                <div class="dropdown" style="margin-top: 31px; margin-left: 20px;">
                    <button type="button" class="btn btn-primary dropdown-toggle" data-bs-toggle="dropdown">
                        Status
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Accepted</a></li>
                        <li><a class="dropdown-item" href="#">Rejected</a></li>
                    </ul>
                </div>
                <div class="form-group" style="margin-top: 31px;margin-left: 10px;">
                    <input type="submit" value="Update" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
